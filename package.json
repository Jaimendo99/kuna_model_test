{
  "name": "kuna-therapist-matching",
  "version": "1.0.0",
  "description": "Kuna AI-powered therapist matching platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && python main.py",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd packages/backend && echo 'Backend ready for deployment'",
    "build:frontend": "cd packages/frontend && npm run build",
    "install:all": "npm install && cd packages/frontend && npm install",
    "migrate": "cd packages/backend && python migrate_therapist_table.py"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "concurrently": "^8.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/kuna-therapist-matching.git"
  },
  "keywords": [
    "therapist",
    "matching",
    "ai",
    "psychology",
    "latin-america"
  ],
  "author": "Kuna Team",
  "license": "MIT"
}
